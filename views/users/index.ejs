<!DOCTYPE html>
<html>
<head>
    <title>Users - IRCAD Africa Intranet</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <%- include('../partials/sidebar', { user: user, path: '/users' }) %>
        
        <main class="content">
            <div class="content-header">
                <h1>Users</h1>
                <a href="/users/new" class="btn-primary">Add New User</a>
            </div>

            <% if (error) { %>
                <div class="error-message"><%= error %></div>
            <% } %>

            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Role</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><%= user.username %></td>
                                <td><span class="user-role" data-role="<%= user.role %>"><%= user.role %></span></td>
                                <td class="actions">
                                    <a href="/users/<%= user.id %>/edit" class="btn-edit">Edit</a>
                                    <form action="/users/<%= user.id %>/delete" method="POST" style="display: inline;">
                                        <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</body>
</html> 