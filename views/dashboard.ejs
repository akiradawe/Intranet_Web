<!DOCTYPE html>
<html>
<head>
    <title>Dashboard - IRCAD Africa Intranet</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="dashboard-container">
        <%- include('./partials/sidebar', { user: user, path: '/dashboard' }) %>
        
        <main class="content">
            <div class="content-header">
                <h1>Welcome, <%= user.username %></h1>
            </div>

            <!-- Quick Links Section -->
            <section class="quick-links-section">
                <div class="section-header">
                    <h2>Quick Links</h2>
                    <% if (user.role === 'admin') { %>
                        <a href="/internal-links" class="btn-view-all">Manage Links</a>
                    <% } %>
                </div>
                <div class="quick-links-grid">
                    <% 
                    // Define an array of background colors to cycle through
                    const colors = [
                        '#FF6B6B', '#B07D62', '#FF8B6B', '#C19A6B', '#614051',
                        '#6B5B95', '#8B0000', '#4B0082', '#556B2F', '#2F4F4F'
                    ];
                    
                    links.forEach((link, index) => { 
                        // Cycle through colors array
                        const bgColor = colors[index % colors.length];
                    %>
                        <a href="<%= link.url %>" class="quick-link-button" style="background-color: <%= bgColor %>;" target="_blank">
                            <i class="<%= link.icon || 'fas fa-link' %>"></i>
                            <span><%= link.title %></span>
                        </a>
                    <% }) %>
                </div>
            </section>

            <!-- Latest Announcements Section -->
            <section class="announcements-section">
                <div class="section-header">
                    <h2>Latest Announcements</h2>
                    <a href="/announcements" class="btn-view-all">View All</a>
                </div>
                <div class="announcements-grid">
                    <% announcements.forEach(announcement => { %>
                        <div class="announcement-card">
                            <div class="announcement-image">
                                <% if (announcement.image_path) { %>
                                    <img src="/uploads/<%= announcement.image_path %>" alt="Announcement Image">
                                <% } else { %>
                                    <div class="default-image">
                                        <i class="fas fa-bullhorn"></i>
                                    </div>
                                <% } %>
                            </div>
                            <div class="announcement-content">
                                <h3><%= announcement.title %></h3>
                                <p class="announcement-text"><%= announcement.content %></p>
                                <div class="announcement-meta">
                                    <span><i class="fas fa-user"></i> <%= announcement.username %></span>
                                    <span><i class="fas fa-calendar"></i> <%= new Date(announcement.created_at).toLocaleDateString() %></span>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </section>
        </main>
    </div>
</body>
</html> 