<!DOCTYPE html>
<html>
<head>
    <title>Announcements - IRCAD Africa Intranet</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="dashboard-container">
        <%- include('../partials/sidebar', { user: user, path: '/announcements' }) %>
        
        <main class="content">
            <div class="content-header">
                <h1>Announcements</h1>
                <% if (user.role === 'admin' || user.role === 'editor') { %>
                    <a href="/announcements/new" class="btn-new">
                        <i class="fas fa-plus"></i> New Announcement
                    </a>
                <% } %>
            </div>

            <% if (error) { %>
                <div class="error-message"><%= error %></div>
            <% } %>

            <div class="announcements-grid">
                <% announcements.forEach(announcement => { %>
                    <div class="announcement-card">
                        <div class="announcement-image">
                            <% if (announcement.image_path) { %>
                                <img src="/uploads/<%= announcement.image_path %>" alt="Announcement Image">
                            <% } else { %>
                                <div class="default-image">
                                    <i class="fas fa-bullhorn"></i>
                                </div>
                            <% } %>
                        </div>
                        <div class="announcement-content">
                            <h2><%= announcement.title %></h2>
                            <p class="announcement-text"><%= announcement.content %></p>
                            
                            <% if (announcement.attachments && announcement.attachments.length > 0) { %>
                                <div class="attachments-section">
                                    <h4>Attachments</h4>
                                    <div class="attachments-list">
                                        <% announcement.attachments.forEach(attachment => { %>
                                            <div class="attachment-item">
                                                <i class="fas fa-paperclip"></i>
                                                <span class="attachment-name"><%= attachment.filename %></span>
                                                <a href="/uploads/<%= attachment.filename %>" class="btn-download" target="_blank">
                                                    <i class="fas fa-external-link-alt"></i> Open
                                                </a>
                                            </div>
                                        <% }) %>
                                    </div>
                                </div>
                            <% } %>

                            <div class="announcement-meta">
                                <div class="meta-info">
                                    <span><i class="fas fa-user"></i> <%= announcement.username %></span>
                                    <span><i class="fas fa-calendar"></i> <%= new Date(announcement.created_at).toLocaleDateString() %></span>
                                </div>
                                <% if (user.role === 'admin' || user.role === 'editor') { %>
                                    <div class="announcement-actions">
                                        <a href="/announcements/<%= announcement.id %>/edit" class="btn-edit">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <form action="/announcements/<%= announcement.id %>/delete" method="POST" class="delete-form">
                                            <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this announcement?')">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </main>
    </div>
</body>
</html>
